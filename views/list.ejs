<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Sour+Gummy:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"/>
    <title>Document</title>
</head>
<body>

    <% if(AlertMsg){ %>
        <script>alert("<%= AlertMsg %>");</script>
    <% } %>
    <!--Header-->
    <header>
    <h1>Todo List</h1>
    <nav>
      </nav>
</header>

    <main class="container">
<!--Filter-->
    <div class="box">
        <form action="/" method="GET">
            <label for="priority">Filter by Priority</label>
            <select name="priority" onchange="this.form.submit()">
                <option value="all" <%=  filter==="all"? "Selected":"" %>>ALL</option>
                <option value="high" <%= filter==='high'? "Selected":"" %> >High</option>
                <option value="medium" <%= filter==="medium" ? "Selected":"" %> >Medium</option>
                <option value="low" <%= filter==="low"? "Selected":"" %>>Low</option>
            </select>
        </form>
    </div>

    <!--List-->
    <div class="box">

       <% for(let i =0; i<enter.length; i++) { %>

        <div class="items">
            <p><%= enter[i].name %> - <strong><%= enter[i].priority %></strong></p>
             <!-- Edit Form -->
            <form action="/edit/<%= enter[i]._id %>?_method=PUT" method="POST" class="formItem"">
                <input type="text" name="enter" value="<%= enter[i].name %>">
                <select name="priority">
                    <option value="High" <%= enter[i].priority==="High"?"selected":"" %>>High</option>
                    <option value="Medium" <%= enter[i].priority==="Medium"?"selected":"" %>>Medium</option>
                    <option value="Low" <%= enter[i].priority==="Low"?"selected":"" %>>Low</option>
                </select>
                <button type="submit" class="submit"><i class="fa-solid fa-file-pen fa-beat"></i></button>
            </form>
            <!-- Delete Button -->
            <form action="/delete/<%= enter[i]._id %>?_method=DELETE" method="POST" id="delete">
                <button type="submit" class="delete"><i class="fa-solid fa-delete-left fa-beat"></i></button>
            </form>   
        </div>
        <% } %>
        
    </div>
    <div class="add">
         <!-- Add New Task -->
        <form action="/" method="POST" class="Add">
            <input type="text" name="enter" placeholder="Enter the Task">
            <select name="priority">
                <option value="High">High</option>
                <option value="Medium">Medium</option>
                <option value="Low">Low</option>
            </select>
            <button type="submit" class="submit"><i class="fa-duotone fa-solid fa-square-plus fa-bounce"></i></button>
        </form>
        </div>
</main>

     <!--Footer-->
    <footer>
        <h4>Â© <%= new Date().getFullYear() %> Todo List App</h4>
    </footer>
</body>
</html>